<div class="UniInfo_Box" id="UniInfo_{Insert_UniID}">
    <div class="UniInfo_Section fl">
        <span class="UniInfo_Col">
            <b>{UniInfo_GameSpeed}:</b><br />
            <b>{UniInfo_ResSpeed}:</b><br />
            <b>{UniInfo_FleetSpeed}:</b><br />
            <b>{UniInfo_StartDate}:</b><br />
            <b>{UniInfo_WorldSize}:</b><br />
        </span>
        <span class="UniInfo_Col TextRight">
            <b class="orange">{Insert_GameSpeed}x</b><br />
            <b class="orange">{Insert_ResSpeed}x</b><br />
            <b class="orange">{Insert_FleetSpeed}x</b><br />
            <b>{Insert_UniStart}</b><br />
            <b class="lime">{Insert_WorldSize}</b><br />
        </span>
    </div>
    <div class="UniInfo_Section fr">
        <span class="UniInfo_Col">
            <b>{UniInfo_ACSOn}:</b><br />
            <b>{UniInfo_RapidOn}:</b><br />
            <b>{UniInfo_FleetDeb}:</b><br />
            <b>{UniInfo_DefDeb}:</b><br />
            <b>{UniInfo_MotherSize}:</b><br />
        </span>
        <span class="UniInfo_Col TextRight">
            <b class="{Insert_GameACS_Color}">{Insert_GameACS}</b><br />
            <b class="{Insert_GameRapidFire_Color}">{Insert_GameRapidFire}</b><br />
            <b class="lime">{Insert_GameFleetDebris}%</b><br />
            <b class="lime">{Insert_GameDefenseDebris}%</b><br />
            <b class="lime">{Insert_MotherSize} {UniInfo_MotherFields}</b><br />
        </span>
    </div>
</div>
